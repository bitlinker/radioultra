<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings_custom</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">#00FF00</item>
    </style>

    <style name="AppTheme.PopupToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
        <item name="popupTheme">@style/AppTheme.PopupToolbarTheme</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="PlayerTrackMetadataTextStyle" parent="@style/PreferenceThemeOverlay">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="PlayerTrackArtistTextStyle" parent="@style/PreferenceThemeOverlay">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="PlayerStreamStatusTextStyle" parent="@style/PreferenceThemeOverlay">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
</resources>
